<!DOCTYPE html>
<html>
<head>
    <title>Some Site</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Welcome to the users page</h1>   
    <button onclick="window.location.href='/create'">Create User</button>
    
    <% if(obj.users.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Surname</th>
                    <th>Department</th>
                    <th>Password</th>
                    <th>User Type</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% obj.users.forEach((user) => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.surname %></td>
                        <td><%= user.department %></td>
                        <td><%= user.password %></td>
                        <td><%= user.user_type %></td>
                        <td><button onclick="window.location.href='/update/<%= user.id %>'">Update</button></td>
                        <td><button class="delete" onclick="window.location.href='/delete/<%= user.id %>'">Delete</button></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No users found.</p>
    <% } %>


    </body>
    </html>
